
public class main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String baraja="1C2C3C4C5C6C7C8C9CJCQCKCAC"
				+ "1D2D3D4D5D6D7D8D9DJDQDKDAD"
				+ "1T2T3T4T5T6T7T8T9TJTQTKTAT"
				+ "1P2P3P4P5P6P7P8P9PJPQPKPAP";
	String carta="";
		int num=0;
		for (int i = 1; i <= 52 ; i++) {
		num = (int) (Math.random()*baraja.length());
		if (num%2!=0) {
			num--;
		}
		carta=baraja.substring(num, num+2);
		if (carta.equals("1C")) {
			carta="10C";
		}else if(carta.equals("1D")){
			carta="10D";
		}else if(carta.equals("1T")){
			carta="10T";
		}
		else if(carta.equals("1P")){
			carta="10P";
		}
		
		if(carta.endsWith("C")){
			carta=carta.replace('C', (char)35); //Corazones #
		}else if (carta.endsWith("D")){
			carta=carta.replace('D', (char)36); //Diamantes $
		}else if (carta.endsWith("T")){
			carta=carta.replace('T', (char)37); //Treboles %
		}else if (carta.endsWith("P")){
			carta=carta.replace('P', (char)38);//Picas &
		}
		
		
		
		System.out.print(carta+" ");
		if (i%13==0) {
			System.out.println();
		}
		baraja=baraja.substring(0,num)+baraja.substring(num+2);
	}
	}

}
