/**
 * @author usuario
 *
 */
public class Hora {
	private int hora;
	private int min;
	private int seg;
	
	
	public Hora(int hora, int min, int seg) {
		
		this.hora = hora;
		this.min = min;
		this.seg = seg;
	}
	
	
	public int getHora() {
		return hora;
	}
	
	public void setHora(int hora) {
		if (hora >=0 && hora < 24) {
			this.hora = hora;
		}
	}
	
	public int getMin() {
		return min;
	}
	
	public void setMin(int min) {
		if (min >=0 && min <60) {
			this.min = min;
		}
	}
	
	public int getSeg() {
		return seg;
	}
	
	public void setSeg(int seg) {
		if (seg >=0 && seg < 60) {
			this.seg = seg;
		}
	}
}
